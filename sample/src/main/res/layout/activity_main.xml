<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview1"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="1"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview2"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="1"
            custom:showMask="true"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview3"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="2"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview4"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="2"
            custom:showMask="true"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview5"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="3"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview6"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="3"
            custom:showMask="true"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview7"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="4"/>

        <com.bnsantos.tile.gallery.lib.GalleryTilePreview
            android:id="@+id/mediaPreview8"
            android:layout_width="@dimen/media_preview_size"
            android:layout_height="@dimen/media_preview_size"
            android:layout_margin="@dimen/margin"
            custom:maxTiles="4"
            custom:showMask="true"/>
    </LinearLayout>
</ScrollView>
