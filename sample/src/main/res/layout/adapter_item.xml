<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tileCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/small_margin"/>

    <com.bnsantos.tile.gallery.lib.GalleryTilePreview
        android:id="@+id/mediaPreview"
        android:layout_height="@dimen/media_preview_size"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/m_margin"
        android:layout_marginRight="@dimen/m_margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:maxTiles="4"
        app:showAnimation="true"
        app:showMask="true"/>
</LinearLayout>